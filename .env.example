# Supabase Database
# Get these from: Supabase Dashboard -> Project Settings -> Database
# Connection string format: jdbc:postgresql://db.[PROJECT_REF].supabase.co:5432/postgres
DATABASE_URL=jdbc:postgresql://db.xxxxxxxxxxxxx.supabase.co:5432/postgres
DB_USERNAME=postgres
DB_PASSWORD=your_supabase_password

# Clerk Authentication
# Get these values from your Clerk dashboard (https://dashboard.clerk.com)
# 1. Go to your application -> Configure -> API Keys
# 2. Copy the "Issuer URL" (format: https://your-domain.clerk.accounts.dev)
# 3. Copy the "JWKS URL" (format: https://your-domain.clerk.accounts.dev/.well-known/jwks.json)
CLERK_ISSUER_URL=https://your-domain.clerk.accounts.dev
CLERK_JWKS_URL=https://your-domain.clerk.accounts.dev/.well-known/jwks.json

# For webhook signature validation
# 1. Go to Webhooks in Clerk dashboard
# 2. Create a webhook endpoint: https://your-api-domain.com/api/v1/webhooks/clerk
# 3. Subscribe to events: user.created, user.updated, user.deleted
# 4. Copy the "Signing Secret"
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Stream Chat (for messaging)
STREAM_API_KEY=
STREAM_API_SECRET=

# OneSignal (for push notifications)
ONESIGNAL_APP_ID=
ONESIGNAL_API_KEY=

# Resend (for emails)
RESEND_API_KEY=

# Google Maps
GOOGLE_MAPS_API_KEY=

# Scaleway Object Storage (S3-compatible)
SCALEWAY_ACCESS_KEY=
SCALEWAY_SECRET_KEY=
SCALEWAY_BUCKET=padel-uploads
SCALEWAY_REGION=fr-par
SCALEWAY_ENDPOINT=https://s3.fr-par.scw.cloud

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:19006,http://localhost:8081

# JWT (legacy - not needed with Clerk)
JWT_SECRET=change-me-in-production
